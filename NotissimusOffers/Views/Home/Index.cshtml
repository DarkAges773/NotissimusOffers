@model Offer
@{
	ViewData["Title"] = "Home Page";
}

<div class="text-center">
	<h1 class="display-4">@Model.Title</h1>
	<br/>
	<div class="row">
		<div class="col-6">
			<p>@Model.Description</p>
		</div>
		<div class="col-4">
			<div class="card mb-4 rounded-3 shadow-sm">
				<div class="card-header py-3">
					<h4 class="my-0 fw-normal">@(Model.Delivery == true ? "С доставкой" : "Без доставки")</h4>
				</div>
				<div class="card-body">
					<h1 class="card-title pricing-card-title">₽@Model.Price</h1>
					<ul class="list-unstyled mt-3 mb-4">
						<li>Носитель: @Model.Media</li>
						<li>Артист: @Model.Artist</li>
						<li>Год: @Model.Year</li>
					</ul>
					<a class="w-100 btn btn-lg btn-outline-primary" href="@Model.Url">Заказать</a>
				</div>
			</div>
		</div>
	</div>
</div>
